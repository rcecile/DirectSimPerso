PRO grid_theo

dir='/sps/lsst/data/rcecile/TJP_BAO_grids/'
suff='G2_'

D=['0.9','1.3','1.8','1.8']
snx=['640','900','1024','500']
nz=[125,75,65,75]
nD = n_elements(D)

for id = 0,nD-1 do begin
   grid=dir+'grid_'+suff+strtrim(snx[id],2)+'_z'+D[id]+'.fits'
   print,grid
   c=mrdfits(grid,2,h)
   read,xx
END

id=3  
 grid=dir+'grid_'+suff+strtrim(snx[id],2)+'_z'+D[id]+'.fits'
 c3=mrdfits(grid,1,h)
id=2 
 grid=dir+'grid_'+suff+strtrim(snx[id],2)+'_z'+D[id]+'.fits'
 c2=mrdfits(grid,1,h)
 h2=histogram(c2,min=0,max=5,bin=0.1)   
h3=histogram(c3,min=0,max=5,bin=0.1)  

plot,double(h3)/n_elements(c3),/xs,/ys,th=3
oplot,double(h2)/n_elements(c2),th=3,col=123

plot,double(h2)/n_elements(c2),/xs,/ys,th=3
oplot,double(h3)/n_elements(c2),th=3,col=123



 plot,c2[0:1e6],/xs,/ys,psym=1
 oplot,c3[0:1e6],col=123,psym=2
